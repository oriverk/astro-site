---
import '../styles/global.scss'
import Header from './Header.astro'
import Footer from './Footer.astro'

export interface Props {
  title: string
  noindex?: boolean
}
const { title, noindex } = Astro.props
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="format-detection" content="email=no,telephone=no,address=no" />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/assets/image/icon16x.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/image/icon32x.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/assets/image/icon180x.png"
    />
    <meta name="apple-mobile-web-app-title" content="Kawano Yudai" />
    <meta name="author" content="Kawano Yudai" />
    <meta name="theme-color" content="#00e1ee" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="Kawano Yudai" />
    <meta name="generator" content={Astro.generator} />
    {noindex && <meta name="robots" content="noindex" />}
    <title>{title}</title>
  </head>
  <body>
    <div id="astro">
      <header>
        <Header />
      </header>
      <main>
        <slot />
      </main>
      <footer>
        <Footer />
      </footer>
    </div>
  </body>
</html>

<style is:global>
  main > * {
    scroll-snap-align: end;
    padding: 2rem;
  }
</style>

<style lang="scss">
  #astro {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;

    & > * {
      width: 100%;
    }
  }

  header {
    position: fixed;
    top: 0;
    z-index: 1;
    background-color: rgba(var(--color-black) / 0.1);
    backdrop-filter: blur(5.4px);
  }

  main {
    flex: 1;
    scroll-snap-type: y mandatory;
    // margin-top: 1rem;
    // margin-bottom: 1rem;
  }
</style>
