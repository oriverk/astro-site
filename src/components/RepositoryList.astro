---
import type { PinnedItem } from "../types/github";
import RepositoryCard from "./RepositoryCard.astro";

interface Props {
  repositoryItems: PinnedItem[]
}

const { repositoryItems } = Astro.props;
---
<div class="github-list">
  <ol class="grid">
    {repositoryItems.map(item => (
      <li>
        <RepositoryCard {...item} />
      </li>
    ))}
  </ol>
</div>

<style>
  .grid {
    margin: 0;
    padding: 0;
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(1, 1fr);
    list-style: none;
  }

  @media (min-width: 640px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
